package trabalhos;

import java.util.Scanner;

public class Exercicio1 {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		
		int[] pontuacao = {0,0,0};
		int[] maiorPontuacao = 0;
		
		for (int i = 0; i <5; i++);
		{
			System.out.println("Qual foi a pontuação ",i+1,"? ");
			pontuacao = ler.nextInt();
			if(pontuacao > maiorPontuacao)
				{
					maiorPontuacao = pontuacao;
				}
		}
		ler.close();
		for(int i = 0; i < 5; i++)
		{
			System.out.printf("A nota da atividade ",i+1," foi: ",pontuacao[i]," pontos\n");
			
		}
		System.out.printf("A maior nota foi: ",maiorPontuacao," pontos \n");
		
	}
}
